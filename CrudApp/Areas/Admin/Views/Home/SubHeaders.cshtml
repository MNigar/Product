@model IEnumerable<CrudApp.Db.Models.SubHeader>

@{
    ViewData["Title"] = "Index";
}

<h2>@stringLocalizer["SubHeader"]</h2>
<style>
    td {
        text-align: center;
    }

    th {
        text-align: center;
    }
</style>
<div class="container">
    <hr />
    <p>
        @if (Model.Count() == 0)
        {
            <a asp-action="Create">@stringLocalizer["Create"]</a>

        }

    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                    @stringLocalizer["Image"]
                </th>

                <th>@stringLocalizer["Details"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                        <img src="~/Public/metropolitanhost.com/themes/themeforest/html/trickly/assets/img/@item.Image" style="height: 100px; width:100px; object-fit: cover">

                        
                    </td>

                    <td>
                        <a asp-action="EditLogo" asp-route-id="@item.Id">Edit</a> 
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>