@model IEnumerable<CrudApp.Db.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h2>@stringLocalizer["Books"]</h2>
<p>
</p>
<style>
    td {
        text-align: center;
    }
    th {
        text-align: center;
    }

</style>
<div>
    <div class="col-2"> </div>
    <div class="col-2">
        <div class="row">
            @stringLocalizer["Active"]: <div style="width:20px;height:20px;border:1px solid black; background-color :antiquewhite"></div>
        </div>
    </div>
    <div class="col-2">
        <div class="row">
            @stringLocalizer["Deactive"]  : <div style="width:20px;height:20px;border:1px solid black; background-color :#948d8d"></div>
        </div>
    </div>
    <div class="col-2">
        <div class="row">
            @stringLocalizer["New"]   : <div style="        width: 20px;
        height: 20px;
        border: 1px solid black;
        background-color: #ffd800">
            </div>
        </div>

    </div>
    <div class="col-2">
        <div class="row">
            @stringLocalizer["Updated"]  : <div style="width:20px;height:20px;border:1px solid black; background-color : aqua"></div>
        </div>
    </div>
    <br />
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                <label>No</label>
            </th>
            <th>
                @stringLocalizer["Name"]
            </th>
            <th>
                @stringLocalizer["Author"]
            </th>
            <th>
                @stringLocalizer["Category"]

            </th>
            <th>
                @stringLocalizer["PageCount"]

            </th>
            <th>
                @stringLocalizer["Image"]

            </th>
            <th>
                @stringLocalizer["CreatedDate"]

            </th>
          

            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int num = 0;}

        @foreach (var item in Model)
        {
            <input type="hidden" value="@item.Id" id="id" />

            if (item.Status == 0)
            {
                <tr style="background-color: antiquewhite">

                    @{num = num + 1;
                    }

                    <td>
                        <label>@num</label>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PageCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>



                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id"> @stringLocalizer["Details"]</a>

                    </td>
                </tr>
            }

            if (item.Status == 1)
            {
    <tr style="background-color: #948d8d">
        @{num = num + 1;
        }

        <td>
            <label>@num</label>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>



        <td>
            <a asp-action="Details" asp-route-id="@item.Id"> @stringLocalizer["Details"]</a>
        </td>
    </tr>

            }
            if (item.Status == 3)
            {
    <tr style="background-color: #efa115 ">
        @{num = num + 1;
        }

        <td>
            <label>@num</label>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>



        <td>
            <a asp-action="Details" asp-route-id="@item.Id"> @stringLocalizer["Details"]</a> 
        </td>
    </tr>
            }

            if (item.Status == 2)
            {
    <tr style="background-color: aqua ">
        @{num = num + 1;
        }

        <td>
            <label>@num</label>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>



        <td>
            <a asp-action="Details" asp-route-id="@item.Id"> @stringLocalizer["Details"]</a>
        </td>
    </tr>
            }


        }
    </tbody>
</table>
