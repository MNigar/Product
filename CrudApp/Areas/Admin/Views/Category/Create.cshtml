@model CrudApp.Db.Models.Category


@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/_Layout.cshtml";

}



<div class="container">
    <h4>@stringLocalizer["Create"]</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label"> @stringLocalizer["Name"]</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">@stringLocalizer["Image"]</label>
                    <input name="image" id="image" class="form-control" type="file" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
        <img id="photo" style="display:none;" width="300" height="300" />
    </div>
    <div>
        <a asp-action="Index">@stringLocalizer["Back to List"]</a>
    </div>
</div>
 <script>
         image.addEventListener("change", function (e) {
             var file = new FileReader();
             file.readAsDataURL(e.target.files[0]);
             file.onloadend = function () {
                 photo.style.display = "block";
                 photo.src = file.result;
             }
         })
</script>
