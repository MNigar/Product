@model CrudApp.Db.Models.User

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";

    ViewData["Title"] = "Registration";
}

<body>
  
    <div class="section metro_post-single">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <form asp-action="Registration">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="metro_recipe-submit-section">
                            <div class="metro_recipe-submit-section">
                                <div class="row">
                                    <div class="col-12">
                                        <label>Registration</label>
                                    </div>
                                    <div class="form-group col-md-6">

                                        <label  class="control-label">@stringLocalizer["Name"]</label>
                                        <input asp-for="Name" class="form-control" type="text" value="" placeholder="Name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>

                                    </div>

                                    <div class="form-group col-md-6">
                                        <label class="control-label">@stringLocalizer["Surname"]</label>
                                        <input asp-for="Surname" class="form-control" type="text" value="" placeholder="Surname" />
                                        <span asp-validation-for="Surname" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="control-label">@stringLocalizer["Email"]</label>
                                        <input asp-for="Email" class="form-control" type="text" value="" placeholder="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label  class="control-label">@stringLocalizer["Password"]</label>
                                        <input asp-for="Password" class="form-control" type="password" value="" placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>


                                </div>
                                <div class="form-group">
                                    <div class="text-center">
                                        <button type="submit" class="mt-4 metro_btn-custom" name="button">Register</button>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">

                                @*<div class="text-center">
                                <button type="button" class="mt-4 metro_btn-custom" onclick="location.href='@Url.Action("Registration", "Home")'" name="button">Registration</button>
                            </div>*@
                                <div class="text-center">

                                    <a asp-controller="Home"
                                       asp-action="Login">If you  have account,please login</a>
                                </div>
                            </div>
                        </div>
                        @*<div class="form-group">

                        <div class="text-center">
                            <button type="button" class="mt-4 metro_btn-custom" onclick="location.href='@Url.Action("Login", "Home")'" name="button">Login</button>
                        </div>
                    </div>*@
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                Email already exist
                            </div>
                            TempData["Error"] = null;
                        }

                    </form>
                </div>
            </div>

        </div>
        <style>
            .error {
                border-color: red !important;
            }
        </style>
    </div>

</body>
</html>


<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.3.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/jquery.validate.min.js"></script>

<script src="~/Scripts/Validator.js"></script>



