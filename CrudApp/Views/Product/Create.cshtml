@model CrudApp.Db.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<div class="container">
    <h2>@stringLocalizer["Add Book"]</h2>

    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label  class="control-label">@stringLocalizer["Name"]</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">@stringLocalizer["Author"]</label>
                    <input asp-for="Author" class="form-control" required />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label"> @stringLocalizer["Category"]</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId" ></select>
                </div>
                <div class="form-group">
                    <label class="control-label">@stringLocalizer["PageCount"]</label>
                    <input asp-for="PageCount" class="form-control"  required />
                    <span asp-validation-for="PageCount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label  class="control-label">@stringLocalizer["Description"]</label>
                    <textarea asp-for="Description" required class="form-control" rows="5" cols="40"></textarea>


                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label"> @stringLocalizer["PublishingHouse"]</label>
                    <input asp-for="PublishingHouse" class="form-control"  />


                    <span asp-validation-for="PublishingHouse" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">@stringLocalizer["Image"]</label>
                    <input name="image" required id="image" class="form-control" type="file" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
            <img id="photo" style="display:none;" width="300" height="300" />
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
         image.addEventListener("change", function (e) {
                 var file = new FileReader();
                 file.readAsDataURL(e.target.files[0]);
                 file.onloadend = function () {
                 photo.style.display = "block";
                 photo.src = file.result;
             }
         })
</script>